<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0"
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
  <filter>
  	<filter-name>SessionCheck</filter-name>
  	<filter-class>storm_falcon.filter.SessionCheck</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>SessionCheck</filter-name>
  	<url-pattern>*.jsp</url-pattern>
  </filter-mapping>
    
  <servlet>
    <servlet-name>CreateOrModify</servlet-name>
    <servlet-class>storm_falcon.servlet.CreateOrModify</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Delete</servlet-name>
    <servlet-class>storm_falcon.servlet.Delete</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Search</servlet-name>
    <servlet-class>storm_falcon.servlet.Search</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Login</servlet-name>
    <servlet-class>storm_falcon.servlet.Login</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>CreateOrModify</servlet-name>
    <url-pattern>/CreateOrModify</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Delete</servlet-name>
    <url-pattern>/Delete</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Search</servlet-name>
    <url-pattern>/Search</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Login</servlet-name>
    <url-pattern>/Login</url-pattern>
  </servlet-mapping>
  
  <welcome-file-list>
  	<welcome-file>login.jsp</welcome-file>
  </welcome-file-list>

</web-app>